<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".bitmaps.ViewToBitmapActivity">

    <TextView
        android:id="@+id/tv_0"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@color/general_font_color"
        app:layout_constraintBottom_toBottomOf="@+id/tv_0"
        app:layout_constraintStart_toEndOf="@+id/tv_0" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/tv_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_1" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:background="@color/register_font_color"
        app:layout_constraintStart_toStartOf="@+id/tv_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_2" />


    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_3">

        <TextView
            android:id="@+id/tv_rl_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_rl_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="test"
            android:textColor="@color/white"
            android:textSize="40sp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>